import java.util.*;

class Abhinav {
    public static void main(String[] args)  {
    Scanner sc = new Scanner(System.in);
    int temp =0 ;
    
    int a = sc.nextInt();
    int b = sc.nextInt();
    
    for(int i = 1; i <=a ; i++){
        
        if((a%i==0)&& (b%i==0)){
        
        temp = i;
          
        }
    }
    
     System.out.println("lcm of numbers is " + temp ); 
     
 int hcf = a*b/temp;
    
     System.out.println("hcf of numbers is " + hcf);
        
    }
}
